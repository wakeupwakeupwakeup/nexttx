{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src/",
    "paths": {
      "@/*": ["*"],

      "@src/": ["src/"],

      "@app": ["app/*"],

      "@pages": ["./pages"],
      "@pages/*": ["./pages/*"],

      "@widgets": ["./widgets"],
      "@widgets/*": ["./widgets/*"],

      "@features": ["./features"],
      "@features/*": ["./features/*"],

      "@entities": ["./entities"],
      "@entities/*": ["./entities/*"],

      "@/shared/*": ["shared/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
